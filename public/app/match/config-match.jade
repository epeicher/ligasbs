.container
	.well
		form.form-horizontal(name="matchForm")
			fieldset
				legend#matchLegend New Match Configuration
				.row
					.col-md-6
						.form-group
							h3.col-md-8.col-md-offset-4 Light Team
						.form-group
							label.col-md-4.control-label(form="nickname") Nick player 1
							.col-md-8
								select.form-control(name="nickname", ng-model="match.lightTeam[0].name", ng-options="player for player in players" required)
						.form-group
							label.col-md-4.control-label(form="nickname") Nick player 2
							.col-md-8
								select.form-control(name="nickname", ng-model="match.lightTeam[1].name", ng-options="player for player in players" required)
						.form-group
							label.col-md-4.control-label(form="nickname") Nick player 3
							.col-md-8
								select.form-control(name="nickname", ng-model="match.lightTeam[2].name", ng-options="player for player in players" required)
						.form-group
							label.col-md-4.control-label(form="nickname") Nick player 4
							.col-md-8
								select.form-control(name="nickname", ng-model="match.lightTeam[3].name", ng-options="player for player in players" required)
						.form-group
							label.col-md-4.control-label(form="nickname") Nick player 5
							.col-md-8
								select.form-control(name="nickname", ng-model="match.lightTeam[4].name", ng-options="player for player in players" required)
					.col-md-6
						.form-group
							h3.col-md-8.col-md-offset-4 Dark Team
						.form-group
							label.col-md-4.control-label(form="nickname") Nick player 1
							.col-md-8
								select.form-control(name="nickname", ng-model="match.darkTeam[1].name", ng-options="player for player in players" required)
						.form-group		
							label.col-md-4.control-label(form="nickname") Nick player 2
							.col-md-8
								select.form-control(name="nickname", ng-model="match.darkTeam[1].name", ng-options="player for player in players" required)
						.form-group
							label.col-md-4.control-label(form="nickname") Nick player 3
							.col-md-8
								select.form-control(name="nickname", ng-model="match.darkTeam[2].name", ng-options="player for player in players" required)
						.form-group
							label.col-md-4.control-label(form="nickname") Nick player 4
							.col-md-8
								select.form-control(name="nickname", ng-model="match.darkTeam[3].name", ng-options="player for player in players" required)
						.form-group
							label.col-md-4.control-label(form="nickname") Nick player 5
							.col-md-8
								select.form-control(name="nickname", ng-model="match.darkTeam[4].name", ng-options="player for player in players" required)
				.row
					.col-md-12			
						.form-group
							label.col-md-2.col-md-offset-4.control-label(form="matchdate") Date and Time of the Match
							.col-md-3
								.dropdown
									a.dropdown-toggle.my-toggle-select#dLabel(role="button" data-toggle="dropdown" data-target="#" href="")
										input.form-control(type="text"  ng-model="dateFormatted")
										span.input-group-addon
											span.glyphicon.glyphicon-calendar
									ul.dropdown-menu(role="menu" aria-labelled-by="dLabel")
										datetimepicker(ng-model="date" data-datetimepicker-config="{ dropdownSelector: '.my-toggle-select' }" data-on-set-time="onTimeSet")
						.form-group
							label.col-md-2.col-md-offset-4.control-label(form="location") Location
							.col-md-3
								input.form-control(name="location", type="text", ng-model="match.location")								
						.form-group
							.col-md-2.col-md-offset-6.col-xs-2.col-xs-offset-5
								button.btn.btn-primary(ng-click="configMatch()") Save!
